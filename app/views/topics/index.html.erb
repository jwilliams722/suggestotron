<h1>Listing topics</h1>

<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @topics.each do |topic| %>
  <tr>
    <td><%= link_to topic.title, topic %></td>
    <td><%=pluralize(topic.votes.count, "vote") %></td>
    <td><%= button_to '+1', topic_votes_path(topic_id: topic.id), method: :post %></td>
    <td>
      <% if topic.votes.any? %>
        <%= button_to '-1', topic_vote_path(topic_id: topic.id, id: topic.votes.first.id), method: :delete %>
      <% end %>
    </td>
    <td><%= link_to 'Delete', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

